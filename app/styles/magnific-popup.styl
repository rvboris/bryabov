.mfp-fade
  &.mfp-bg
    opacity 0
    transition all 0.3s ease-out
    &.mfp-ready
      opacity 0.8
    &.mfp-removing
      opacity 0
  &.mfp-wrap
    .mfp-content
      opacity 0
      transition all 0.3s ease-out
    &.mfp-ready
      .mfp-content
        opacity 1
    &.mfp-removing
      .mfp-content
        opacity 0