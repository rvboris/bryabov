body
    background: #E9E2D5 url(../images/body-bg.jpg) fixed no-repeat center
    background-size: cover
    color: #444
    text-rendering: optimizeLegibility !important
    -webkit-font-smoothing: antialiased !important
    -moz-osx-font-smoothing: grayscale !important

h1,
h2,
h3,
h4,
h5,
h6
    color: #444

abbr[title]
    border-bottom: 1px dotted #999

blockquote span
    color: #999999

hr
    border: solid #efefef

code
    border: 1px solid #e1e1e8
    background-color: #f7f7f7
    color: #d14

pre
    border: 1px solid #e1e1e8
    background-color: #f7f7f7

.hr
    border-top: 1px solid #efefef

.text-highlight
    background-color: #d5edf8
    color: #111111

.mute
    color: #aaa

a,
a:visited
    color: #444

a:active
    background: transparent

table
    background-color: transparent

table th,
table td
    border-top: 1px solid #efefef

label span
    color: #ff0000

input,
textarea,
select
    border: 1px solid #ddd
    background: #fff
    color: #666

input[type="text"]:focus,
input[type="email"]:focus,
input[type="url"]:focus,
textarea:focus
    border-color: #888

select:focus
    outline: thin dotted #333

input:-moz-placeholder,
textarea:-moz-placeholder
    color: #ccc

input:-ms-input-placeholder,
textarea:-ms-input-placeholder
    color: #ccc

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder
    color: #ccc

#back-to-top
    background-color: rgba(0, 0, 0, 0.8)
    color: #fafafa

#back-to-top:hover
    background-color: rgba(0, 0, 0, 1)

#back-to-top:hover i
    color: #fff

.btn
    border: 1px solid #ccc
    background-color: #fff
    color: #444

.btn:hover
    background: #f9f9f9

.btn-white
    border: 1px solid #dddddd
    background-color: #f7f7f7
    color: #444

a.btn-white
    color: #444

.btn-white:hover
    background: #fbfbfb

.btn-black
    border: 1px solid #464646
    background-color: #464646
    color: #fff

a.btn-black
    color: #fff

.btn-black:hover
    background: #535353

.btn-blue
    border: 1px solid #1f70ad
    background-color: #2778c8
    color: #fff

a.btn-blue
    color: #fff

.btn-blue:hover
    background: #287fc8

.btn-red
    border: 1px solid #b23730
    background-color: #c74039
    color: #fff

a.btn-red
    color: #fff

.btn-red:hover
    background: #ce4640

.btn-green
    border: 1px solid #819633
    background-color: #8da046
    color: #fff

a.btn-green
    color: #fff

.btn-green:hover
    background: #93a749

.callout-box
    background-color: #333
    color: #fff

.callout-box.bg-img
    color: #fff

.callout-box.bg-pattern
    color: #fff

.callout-box.bordered
    border: 1px solid #efefef
    background-color: #f5f5f5

ul.check li:before,
ul.plus li:before,
ul.pin li:before,
ul.fill-circle li:before
    color: #92B687

.divider.single-line
    border-top: 1px solid #e2e2e2

.divider.double-line
    border-top: 4px double #e2e2e2

.divider.single-dotted
    background: url(../../images/bg-single-dotted.gif) repeat-x top left

.divider.double-dotted
    background: url(../../images/bg-double-dotted.gif) repeat-x top left

.pie-chart i,
.pie-chart .pie-chart-custom-text,
.pie-chart .pie-chart-percent
    color: #444444

a.social-icon
    background-color: #f0f0f0
    color: #303030
    &:hover
        background-color: darken(#f0f0f0, 10%)

@media (max-width: 480px)
    tr
        border-top: 1px solid #555

#wrap
    background-color: #fff

.cv-section
    border-top: 1px solid #dadada
    &.portfolio
        padding-bottom 20px

#header .cv-section:first-child
    border-top: 10px solid #252525

.cv-section-title img
    border: 1px solid #dadada

.cv-section-title h2
    color: #b1b1b1

.cv-item
    border-bottom: 1px solid #dadada

.period
    background-color: #252525
    color: #fff

.cv-item:hover .period
    background-color: #252525

.copyright
    background-color: #252525
    color: #fff

.portfolio-items li a
    color: #FFF

.portfolio-filter ul li a
    color: #444
    border-bottom: 1px solid transparent

.portfolio-filter ul li a:hover,
.portfolio-filter ul li a.active
    color: #444
    border-bottom: 1px solid #444
    background: transparent

.portfolio-filter .tip
    display inline-block
    color #000
    font-weight 300
    margin 20px 0 0 0

.cv-contact
    background-color #fff
    left: -320px

.cv-contact-toggle
    background-color #252525
    i
        color #FFF

label.validation-error
    color: #b55454

input.validation-error,
textarea.validation-error,
select.validation-error
    border: 1px solid #a1a1a1

#contact-form button
    background-color: #252525
    color: #fff

#contact-form button:hover
    background-color #252525

#contact-form input, #contact-form textarea
    width: 100%

#print,
#pdf
    background-color: rgba(0,0,0,0.8)

#print i,
#pdf i
    color: #fff

#print:hover,
#pdf:hover
    background-color: rgba(0,0,0,1)

@media (max-width: 767px)
    body
        background-color: #fff
